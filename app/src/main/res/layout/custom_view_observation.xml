<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:background="@color/silver">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_observation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgObservation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fansipan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtObservationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Animal"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="145dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtObservationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 29, 2023"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/gray"
            android:background="#8DC0C0C0"
            android:visibility="gone"
            android:id="@+id/backgroundDelete"/>

        <ImageButton
            android:id="@+id/btnDeleteObservation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_icon"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="340dp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>