<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_marginTop="15px">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_hike"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgHike"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fansipan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hike Name:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtHikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bui Ba Den"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="183dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Location:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtHikeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bui Ba Den"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="164dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtHikeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 29, 2023"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/gray"
            android:background="#8DC0C0C0"
            android:visibility="gone"
            android:id="@+id/backgroundDelete"/>

        <ImageButton
            android:id="@+id/btnDeleteHike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_icon"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="340dp"/>

        <ImageButton
            android:id="@+id/btnUnshareHike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/unshare"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="340dp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>