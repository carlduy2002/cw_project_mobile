<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cw_yellow">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observation Updating"
            android:textSize="30dp"
            android:textStyle="bold"

            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">


            <ImageView
                android:layout_marginTop="100px"
                android:id="@+id/imgViewPopupEditObser"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/fansipan"/>

            <ImageButton
                android:id="@+id/btnUploadEditObser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/camera"

                android:layout_marginLeft="-40dp"
                android:layout_marginTop="230dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40px"
            android:layout_marginRight="15px"
            android:layout_marginTop="150px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Hike Name:"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/eTxtNameEditObser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ba Den Moutain"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Description:"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/eTxtDescriptionEditObser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ba Den Moutain"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelEditObser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnConfirmEditObser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Confirm" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>