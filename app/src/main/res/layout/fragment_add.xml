<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Hike.AddFragment"
    android:id="@+id/addhikes">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:text="Add New Hike"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hikeImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/addpage"
                    android:layout_marginTop="0dp"/>

                <ImageButton
                    android:id="@+id/btnUpload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/camera"
                    android:background="@drawable/style_btn"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="-50dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/hike_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_track_name"
                android:drawablePadding="8dp"
                android:hint="Hike Name"
                android:padding="8dp" />

            <EditText
                android:id="@+id/hike_location"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:padding="8dp" />


            <RadioGroup
                android:id="@+id/hike_parking_available"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawablePadding="10dp"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/parkingYes"
                    android:layout_width="63dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="0dp"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/parkingNo"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-26dp"
                    android:text="No" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-26dp"
                    android:text="Parking:"
                    android:textSize="18sp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/hike_level"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawablePadding="10dp"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/low"
                    android:layout_width="63dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:text="Low"/>

                <RadioButton
                    android:id="@+id/mid"
                    android:layout_width="86dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="-26dp"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/high"
                    android:layout_width="70dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="203dp"
                    android:layout_marginTop="-26dp"
                    android:text="High" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-26dp"
                    android:text="Level:"
                    android:textSize="18sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/hike_length"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_length"
                android:drawablePadding="8dp"
                android:hint="Length"
                android:inputType="number"
                android:padding="8dp" />


            <EditText
                android:id="@+id/hike_description"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_des"
                android:drawablePadding="8dp"
                android:hint="Description"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_Confirm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Confirm"
                android:textSize="18sp"/>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>