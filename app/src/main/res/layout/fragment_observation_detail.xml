<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cw_yellow"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBackObser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back_24" />

        <TextView
            android:id="@+id/txtBackObser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-30dp"
            android:text="Back"
            android:textColor="@color/cw_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:text="Observation Viewing"
            android:textColor="@color/cw_black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgObservation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="100px"
                android:scaleType="fitXY"
                android:src="@drawable/fansipan" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observation Name:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNameObservationDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescriptionObservationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDateObservationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/IbtnDeleteObser"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete_24" />

            <ImageButton
                android:id="@+id/IbtnUpdateObser"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/edit_note_24" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>